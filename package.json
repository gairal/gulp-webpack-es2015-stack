{
  "name": "webpack-stack",
  "version": "1.0.0",
  "description": "Front-end Stack with Pug, Webpack, Babel, ES2016, SASS, Jest",
  "author": "Gairal",
  "readmeFilename": "README.md",
  "main": "src/app/app.js",
  "keywords": [
    "Front-end",
    "Pug",
    "Sass",
    "css",
    "JavaScript",
    "Webpack",
    "babel",
    "es6",
    "es2015",
    "jest"
  ],
  "scripts": {
    "start": "./node_modules/.bin/webpack-dev-server --config ./webpack/webpack.config.js",
    "debug": "./node_modules/.bin/webpack-dev-server --config ./webpack/webpack.config.debug.js",
    "build": "./node_modules/.bin/webpack --config ./webpack/webpack.config.js",
    "release": "./node_modules/.bin/webpack --config ./webpack/webpack.config.prod.js",
    "lint": "./node_modules/.bin/eslint ./src/ && ./node_modules/.bin/eslint ./test/ && ./node_modules/.bin/stylelint './src/**/*.scss'",
    "test": "./node_modules/.bin/jest --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^7.0.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-alias": "^1.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.9",
    "imagemin-webpack-plugin": "^2.1.5",
    "jest": "^23.1.0",
    "jest-localstorage-mock": "^2.2.0",
    "jest-mock-console": "^0.3.5",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "stylelint-config-concentric-order": "^3.0.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.1.3",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "uglifyjs-webpack-plugin": "^1.2.6",
    "webpack": "^4.12.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "write-file-webpack-plugin": "^4.3.2"
  },
  "dependencies": {
    "es6-promise": "^4.1.1",
    "font-awesome": "^4.7.0",
    "tailwindcss": "^0.6.0",
    "whatwg-fetch": "^2.0.3"
  }
}
